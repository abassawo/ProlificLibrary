<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/preview_ll"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/placeholder"/>

        <TextView
            android:id="@+id/bottom_border"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blueish_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/preview_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_item_title"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_item_author"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/checkout_icon_imgview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>


